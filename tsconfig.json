{
  "compilerOptions": {
      "target": "es2019",
      "lib": [ "es2019" ],
      "inlineSourceMap": true,
      "allowJs": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "preserve",
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": true
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
      "**/*.ts"
  ]
}
